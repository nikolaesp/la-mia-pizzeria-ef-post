@{
    // ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model List<Pizza>


<a class="btn btn-primary"
   href="@Url.Action("Create", "Pizza")">
    Crea nuova pizza
</a>

@if (Model.Count == 0)
{
    <h3>Non ci sono Post da Visualizzare!</h3>
}
else
{

    <body>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mt-3 mb-3">Lista posts</h1>
                </div>

                <table class="table post-list-table">
                    <thead>
                        <tr>
                            <th class="col-1">ID</th>
                            <th class="col-3">Immagine</th>
                            <th class="col-3">Titolo</th>
                            <th class="col-3">Descrizione</th>
                            <th class="col-1">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <td>@pizza.Id</td>
                                <!-- questo è un esempio con url immagine esterna alla webapp attuale -->
                                <td class="image"><img class="post-list-image" src="@pizza.Image"></td>
                                <td class="title">@pizza.Title</td>
                                <td class="description">@pizza.Description</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Details", "Pizza", new { id = @pizza.Id } )" role="button">Dettagli</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>

}



